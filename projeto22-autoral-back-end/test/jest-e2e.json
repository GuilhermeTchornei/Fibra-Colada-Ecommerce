{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "testMatch": ["<rootDir>/test/integrations/*.e2e-spec.ts"],
  "testEnvironment": "node",
  "setupFiles": ["<rootDir>/test/test.setup.ts"],
  "moduleNameMapper":{
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  }
}
